<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="default">
        <class>com.queempanadas.model.Empanada</class>
        <class>com.queempanadas.model.Sale</class>
        <class>com.queempanadas.model.Quality</class>
        <class>com.queempanadas.model.EmpanadaSale</class>
        <class>com.queempanadas.model.EmpanadaEntry</class>
        <class>com.queempanadas.model.Entry</class>
        <class>com.queempanadas.model.User</class>

        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.h2.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:h2:mem:test;DB_CLOSE_DELAY=-1"/>
            <property name="jakarta.persistence.jdbc.user" value="sa"/>
            <property name="jakarta.persistence.jdbc.password" value="1234"/>
            <property name="jakarta.persistence.schema-generation.database.action" value="create-drop"/>
        </properties>
    </persistence-unit>
</persistence>